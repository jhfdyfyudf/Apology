    }

    .emoji {
      position: absolute;
      font-size: 40px;
      animation: float 10s infinite linear;
      opacity: 0.6;
    }

    @keyframes float {
      0% { transform: translateY(0); }
      100% { transform: translateY(-100vh); }
    }

    .step { display: none; }
    .active { display: block; }
    input, button, textarea {
      padding: 10px;
      margin: 10px;
